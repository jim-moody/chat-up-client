<div class="form-card card" data-id="{{line.id}}">
<div class="line-text-container">
  <div class="line-text">
    <p>
    {{#if line.text}}
    {{line.text}}
    {{else}}
    No description.
    {{/if}}
    </p>

  </div>
 {{#if line.editable}}
 <div class="edit-link-container"><i class="edit-options fa fa-ellipsis-v fa-lg" aria-hidden="true"></i>
   <!-- Dropdown Structure -->
   <ul  style="display:none;" class='card edit-dropdown-content'>
     <li class="edit" data-id="{{line.id}}">Edit</li>
     <li class="delete" data-id="{{line.id}}">Delete</li>
   </ul>
 </div>
 {{/if}}
</div>
<div id="votes-{{line.id}}" class="voting-container">
  <div class="vote-container">
    <span class="green-text text-darken-3" data-id="up-vote-{{line.id}}">{{line.voteSummary.up}}</span>
    <i data-value="1" data-id="{{line.id}}"class="vote up-vote material-icons blue-text text-darken-4">thumb_up</i>
  </div>
  <div class="vote-container">
    <i data-value="-1" data-id="{{line.id}}" class="vote down-vote material-icons blue-text text-darken-4">thumb_down</i>
    <span data-id="down-vote-{{line.id}}" class="red-text text-darken-3">{{line.voteSummary.down}}</span>
  </div>
</div>
</div>
